<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stinkinsweet.foodlocale.First"
    android:background="@color/background">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:hint="Email"
        android:contextClickable="false"
        android:textColor="#000000"
        android:background="@drawable/round_edit_text"
        android:layout_above="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:hint="Password"
        android:contextClickable="false"
        android:textColor="#000000"
        android:background="@drawable/round_edit_text"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/btnReg"
        android:onClick="RegInfo"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/confirm"
        android:layout_marginTop="41dp"
        android:layout_alignEnd="@+id/confirm"
        android:layout_alignStart="@+id/confirm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirm"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:hint="Confirm password"
        android:contextClickable="false"
        android:textColor="#000000"
        android:background="@drawable/round_edit_text"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtFood"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:background="@color/background"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Food Locale" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="find what your tastebuds need"
        android:id="@+id/txtSub1"
        android:allowUndo="false"
        android:textSize="20dp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:background="@color/background"
        android:textColor="#000000"
        android:layout_below="@+id/txtFood"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtFood" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter valid entries only."
        android:id="@+id/txtSub2"
        android:textStyle="italic"
        android:textSize="15dp"
        android:textAlignment="gravity"
        android:contextClickable="false"
        android:textColor="@android:color/black"
        android:layout_marginTop="31dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/btnReg"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
